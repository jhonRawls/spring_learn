<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<bean id="helloWorld" class="cn.ibadi.springtest.HelloWorld"
		init-method="init" destroy-method="destory">
		<property name="message" value="hello world"></property>
	</bean>

	<bean id="exampleBean" class="cn.ibadi.springtest.ExampleBean">
	</bean>

	<bean id="parentBean" class="cn.ibadi.springtest.Parent">
		<property name="message1" value="hello world"></property>
		<property name="message2" value="hello second world"></property>
	</bean>
	
	<bean id="childBean" class="cn.ibadi.springtest.Child" parent="parentBean">
		<property name="message1" value="hello india"></property>
		<property name="message3" value="hello india world"></property>
	</bean>

<aop:config>
	<aop:aspect id="log" ref="logging">
		<aop:pointcut expression="execution(* cn.ibadi.springtest.*.*(..))"  id="selectAll"/>
		<aop:before method="beforeAdvice"  pointcut-ref="selectAll"/>
		<aop:after method="afterAdvice" pointcut-ref="selectAll"/>
		<aop:after-returning pointcut-ref="selectAll" returning="retVal" method="afterRetruningAdvice"/>
		<aop:after-throwing  pointcut-ref="selectAll" throwing="ex" method="afterThrowingAdvice" />
	</aop:aspect>
</aop:config>

<bean id="student" class="cn.ibadi.springtest.Student ">
<property name="name" value="zara"/>
<property name="age" value="11"/>
</bean>

<bean id="logging"  class="cn.ibadi.springtest.Logging"></bean>

</beans>